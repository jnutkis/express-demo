<div class="row">
  <div class="col s12">
    <h1>{{data.name}}</h1>
    <div>{{data.data}}</div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <form action="/mongoose/item/{{data.id}}?_method=PUT" method="POST">
      <div class="input-field col s6">
        <input id="title" type="text" class="validate" name="name">
        <label for="title">Title</label>
      </div>
      <div class="input-field col s12">
        <textarea id="data" class="materialize-textarea" name="data"></textarea>
        <label for="data">Information</label>
      </div>
      <div class="clearfix"></div>
      <div class="submit-button">
        <div class="col s6">
          <input class="btn blue" type="submit" value="Submit">
        </div>
        <div class="col s6">
          <a href="/mongoose" class="btn red right">
            <i class="material-icons left">keyboard_backspace</i>
            Return
          </a>
        </div>
      </div>
  </div>

  </form>
</div>
</div>