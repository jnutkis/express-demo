<div class="row">
  <div class="col s12">
    <h1>{{data.name}}</h1>
    <div>{{data.data}}</div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <form action="/mongoose/{{data.id}}?_method=PUT" method="POST">
      <div class="input-field col s6">
        <input id="title" type="text" class="validate" name="name">
        <label for="title">Title</label>
      </div>
      <div class="input-field col s12">
        <textarea id="data" class="materialize-textarea" name="data"></textarea>
        <label for="data">Information</label>
      </div>
      <div class="clearfix"></div>
      <div class="submit-button">
        <input class="btn blue" type="submit" value="Submit">
      </div>

    </form>
  </div>
</div>